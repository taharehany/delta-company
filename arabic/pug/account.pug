                                form(class="g-3 needs-validation" action="" novalidate)
                                    div(class="row")
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-person")
                                                input(type="text" class="form-control" placeholder="الاسم" required)
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-telephone")
                                                input(type="number" class="form-control" placeholder="الهاتف" required)
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                div(class="input-group has-validation")
                                                    i(class="input-group-text bi bi-envelope")
                                                    input(type="email" class="form-control" placeholder="الإيميل" required)
                                                    div(class="invalid-tooltip")
                                                        | خطأ في البريد
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                div(class="input-group has-validation")
                                                    select(class="form-control select" placeholder="select", required)
                                                        option(value="" disabled selected) نوع المستخدم
                                                        option(value="") الخيار 1
                                                        option(value="") الخيار 2 
                                                        option(value="") الخيار 3
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-shield-lock")
                                                input(type="password" class="form-control" placeholder="كلمة المرور" required)
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-shield-lock")
                                                input(type="password" class="form-control" placeholder="تأكيد كلمة المرور" required)
                                        div(class="col-lg-12 mb-2")
                                            div(class="form-check")
                                                input(input class="form-check-input" type="checkbox" id="gridCheck1")
                                                label(class="form-check-label", for="gridCheck1")
                                                    | تذكرني
                                        div(class="col-lg-12 text-center")
                                            div(class="form-group")
                                                button(class="btn btn-danger hvr-sweep-to-top" type="submit") تسجيل الان
                            div(class="tab-pane fade", id="nav-login" role="tabpanel", aria-labelledby="nav-login-tab") 
                                form(class="g-3 needs-validation" action="" novalidate)
                                    div(class="row")
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
