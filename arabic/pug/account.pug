extends index

block website_title
    title عقاري | تسجيل دخول أو تسجيل
block home_block
    //breadcrumb
    nav(aria-label="breadcrumb" class="main-breadcrumb" style="background-image:url('../images/backgrounds/broad.jpg')")
        div(class="container")
            ol(class="breadcrumb")
                //- li(class="breadcrumb-item")
                    a(href="index.html") Home
                li(class="breadcrumb-item active" aria-current="page")  تسجيل دخول أو تسجيل جديد
    //breadcrumb

    // login and register
    section(class="login-register")
        div(class="container")
            div(class="login-register-area")
                div(class="login-register-box")
                    div(class="login-register-content")
                        nav
                            #nav-tab(class="nav nav-tabs", role="tablist")
                                button(class="nav-link active", id="nav-register-tab" data-bs-toggle="tab", data-bs-target="#nav-register", type="button", role="tab", aria-controls="nav-register", aria-selected="true") تسجيل جديد

