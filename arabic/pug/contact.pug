extend index

block website_title
    title #{website_title} | contact

block home_block
    //breadcrumb
    nav(aria-label="breadcrumb" class="main-breadcrumb" style="background-image:url('../images/bgs/breadcrumb.jpg')")
        div(class="container")
            div(class="breadcrumb-title")
                h2 contact
            nav(aria-label="breadcrumb")
                ol(class="breadcrumb")
                    li(class="breadcrumb-item")
                        a(href="index.html") Home
                    li(class="breadcrumb-item active", aria-current="page") contact
    //breadcrumb

    //contact
    section(class="contact")
        div(class="container")
            div(class="info-area")
                div(class="row")
                    div(class="col-md-4 col-lg-4")
                        div(class="info-box")
                            i(class="bi bi-envelope") 
                            h4 email
                            a(href="mailto:") mail@yahoo.com
                    div(class="col-md-4 col-lg-4")   
                        div(class="info-box")
                            i(class="bi bi-telephone")
                            h4 phone
                            a(href="tel:" dir="ltr") +201988209222
                    div(class="col-md-4 col-lg-4")
                        div(class="info-box")
                            i(class="bi bi-pin-map")
                            h4 location
                            span 6th of October city
            div(class="form-area")
                div(class="main-title")
                    h2 contact us
                        span(class="line")
                div(class="contact-box")
                    div(class="form-content")
                        form(class="g-3 needs-validation", action="" novalidate)
                            div(class="row")
                                div(class="col-lg-6")
                                    div(class="form-group position-relative")
                                        input(type="text", class="form-control", placeholder="Name" required)
                                div(class="col-lg-6")
                                    div(class="form-group position-relative")
                                        input(type="number", class="form-control", placeholder="Number" required)
                                div(class="col-lg-12")
                                    div(class="form-group position-relative")
                                        div(class="input-group has-validation")
                                            input(type="email", class="form-control", placeholder="Email" required)
                                            div(class="invalid-tooltip")
                                                | email error
                                div(class="col-lg-12")
                                    div(class="form-group position-relative")
                                        textarea(rows="6" placeholder="Type your message" class="form-control" required)
                                div(class="col-lg-12 text-center")
                                    div(class="form-group contact-btn")
                                        div(class="outer-btn")
                                            button(class="btn" type="submit")
                                                span Submit now
    //contact 

    //map
    section(class="map")
        iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d55251.33564056191!2d31.22344491853406!3d30.059558098334296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14583fa60b21beeb%3A0x79dfb296e8423bba!2sCairo%2C%20Cairo%20Governorate!5e0!3m2!1sen!2seg!4v1634654464669!5m2!1sen!2seg", width="100%", height="450", style="border:0;", allowfullscreen="", loading="lazy")
    //map