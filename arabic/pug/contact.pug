extends index

block website_title
    title aqary | contact

block home_block
    //breadcrumb
    nav(aria-label="breadcrumb" class="main-breadcrumb" style="background-image:url('../images/backgrounds/broad.jpg')")
        div(class="container")
            ol(class="breadcrumb")
                li(class="breadcrumb-item")
                    a(href="index.html") Home
                li(class="breadcrumb-item active" aria-current="page") contact
    //breadcrumb

    // contact page map
    div(class="map")
        iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d110550.39964813001!2d31.11960275764731!3d30.01676975648693!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1458469235579697%3A0x4e91d61f9878fc52!2sGiza%2C%20El%20Omraniya%2C%20Giza%20Governorate!5e0!3m2!1sen!2seg!4v1630871023803!5m2!1sen!2seg" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy")
    // contact page map

    // contact
    section(class="contact")
        div(class="container")
            div(class="info-area")
                div(class="row")
                    div(class="col-md-4 col-lg-4")
                        div(class="info-box")
                            i(class="bi bi-envelope") 
                            h4 email
                            a(href="mailto:") mail@yahoo.com
                    div(class="col-md-4 col-lg-4")   
                        div(class="info-box")
                            i(class="bi bi-telephone")
                            h4 phone
                            a(href="tel:") +201988209222
                    div(class="col-md-4 col-lg-4")
                        div(class="info-box")
                            i(class="bi bi-pin-map")
                            h4 location
                            span 6th of October city
            div(class="form-area")
                div(class="main-title")
                    h2 contact us now!
                        span(class="line")
                    p Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quaerat consequuntur quia iure sed, suscipit nihil libero dignissimos fuga debitis
                div(class="contact-box")
                    div(class="form-content")
                        form(class="g-3 needs-validation", action="" novalidate)
                            div(class="row")
                                div(class="col-lg-12")
                                    div(class="form-group position-relative")
                                        input(type="text", class="form-control", placeholder="Name" required)
                                div(class="col-lg-12")
                                    div(class="form-group position-relative")
                                        input(type="number", class="form-control", placeholder="Number" required)
                                div(class="col-lg-12")
                                    div(class="form-group position-relative")
                                        div(class="input-group has-validation")
                                            input(type="email", class="form-control", placeholder="Email" required)
                                            div(class="invalid-tooltip")
                                                | email error
                                div(class="col-lg-12")
                                    div(class="form-group position-relative")
                                        textarea(rows="6" placeholder="Type your message" class="form-control" required)
                                div(class="col-lg-12 text-center")
                                    div(class="form-group position-relative")
                                        button(class="btn btn-danger hvr-sweep-to-top" type="submit") Send
                                div(class="col-lg-12")
                                    div(class="text-center")
                                        p(class="successfully") Message Sent Successfully 
    // contact 