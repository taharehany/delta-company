extend index 

block website_title 
    title Events | Forgot Password

block hedaer_block
block footer_block
block home_block
    div(class="bg-gradient-primary")
        div(class="container")
            div(class="row justify-content-center align-items-center d-flex vh-100")
                div(class="col-xl-10 col-lg-12 col-md-9")
                    div(class="card o-hidden border-0 shadow-lg my-5")
                        div(class="card-body forget-body")
                            div(class="row")
                                div(class="col-lg-6 d-none d-lg-block")
                                    div(class="bg-password-image")
                                div(class="col-lg-6")
                                    div(class="p-5")
                                        div(class="text-center")
                                            h2(class="h4 text-gray-900 mb-2") Forgot Your Password?
                                            p(class="mb-4") We get it, stuff happens. Just enter your email address below and we&apos;ll send you a link to reset your password!
                                        form(class="user")
                                            div(class="form-group")
                                                input#exampleInputEmail(type="email", class="form-control form-control-user", aria-describedby="emailHelp", placeholder="Enter Email Address...")
                                            a(href="login.html", class="btn btn-primary btn-user btn-block")
                                                | Reset Password
                                        hr
                                        div(class="text-center")
                                            a(class="small", href="register.html") Create an Account!
                                        div(class="text-center")
                                            a(class="small", href="login.html") Already have an account? Login!
