//consultant modal
div(class="modals")
    div(class="modal consultant-modal fade", id="consultantModal" tabindex="-1", aria-labelledby="consultantModalLabel", aria-hidden="true")
        div(class="modal-dialog")
            div(class="modal-content")
                div(class="modal-header")
                    h5(class="modal-title" id="consultantModalLabel") طلب استشارة
                    button(type="button", class="btn-close btn-close-white", data-bs-dismiss="modal", aria-label="Close")
                div(class="modal-body inter-form")
                    form(class="g-3 needs-validation" action="" novalidate)
                        div(class="row")
                        div(class="col-lg-12")
                            div(class="form-group input-group flex-nowrap")
                                i(class="input-group-text bi bi-person")
                                input(type="text" class="form-control" placeholder="الاسم" required)
                        div(class="col-lg-12")
                            div(class="form-group input-group flex-nowrap")
                                div(class="input-group has-validation")
                                    i(class="input-group-text bi bi-envelope")
                                    input(type="email" class="form-control" placeholder="البريد الإلكتروني" required)
                                    div(class="invalid-tooltip")
                                        | خطأ في الإيميل
                        div(class="col-lg-12")
                            div(class="form-group input-group flex-nowrap")
                                i(class="input-group-text bi bi-telephone")
                                input(type="number" class="form-control" placeholder="الهاتف" required)
                        div(class="col-lg-12")
                            div(class="form-group input-group flex-nowrap")
                                i(class="input-group-text bi bi-check2-circle")
                                select(class="form-select")
                                    option(disabled, selected) قم باختيار
                                    option(value="1") الخيار 01
                                    option(value="2") الخيار 02
                            div(class="col-lg-12 text-center")
                                div(class="form-group")
                                    button(class="btn btn-danger" type="submit") إرسال الآن
    //consultant modal