                                    option(value="4") option 4
                        div(class="col-lg-3 col-md-6")
                            div(class="select-area")
                                label(for="" class="form-label") location
                                select(class="select")
                                    option(disabled, selected, class="hidden-option") Choose One
                                    option(value="1") option 1
                                    option(value="2") option 2
                                    option(value="3") option 3
                                    option(value="4") option 4
                        div(class="col-lg-3 col-md-6")
                            div(class="select-area")
                                label(for="" class="form-label") price from
                                select(class="select")
                                    option(disabled, selected, class="hidden-option") Choose One
                                    option(value="1") option 1
                                    option(value="2") option 2
                                    option(value="3") option 3
                                    option(value="4") option 4
                        div(class="col-lg-3 col-md-6")
                            div(class="select-area")
                                label(for="" class="form-label") price to
                                select(class="select")
                                    option(disabled, selected, class="hidden-option") Choose One
                                    option(value="1") option 1
                                    option(value="2") option 2
                                    option(value="3") option 3
                                    option(value="4") option 4
                        div(class="col-12")
                            div(class="input-area")
                                label(for="search_text" class="form-label") enter text
                                input(placeholder="enter text", id="search_text", type="text", class="form-control")
                        div(class="col-12")
                            div(class="buttons-area")
                                button(class="btn" class="submit" type="submit")
                                    div(class="spinner-border text-light", role="status")
                                        span(class="visually-hidden") Loading...
                                    | search
                                    i(class="bi bi-search")
                                button(class="btn btn-outline-light" class="reset" type="reset")
                                    | reset
