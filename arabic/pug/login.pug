extend index 

block website_title 
    title Events | Contact

block hedaer_block
block footer_block
block home_block
    div(class="bg-gradient-primary")
        div(class="container")
            div(class="row justify-content-center align-items-center d-flex vh-100")
                div(class="col-xl-10 col-lg-12 col-md-9")
                    div(class="card o-hidden border-0 shadow-lg my-5")
                        div(class="card-body login-body")
                            div(class="row")
                                div(class="col-lg-6 d-none d-lg-block")
                                    div(class="bg-login-image")
                                div(class="col-lg-6")
                                    div(class="p-5")
                                        div(class="text-center")
                                            h2(class="h4 text-gray-900 mb-4") Welcome Back!
                                        form(class="user")
                                            div(class="form-group")
                                                input#exampleInputEmail(type="email", class="form-control form-control-user", aria-describedby="emailHelp", placeholder="Enter Email Address...")
                                            div(class="form-group")
                                                input#exampleInputPassword(type="password", class="form-control form-control-user", placeholder="Password")
                                            div(class="form-group")
                                                div(class="custom-control custom-checkbox small")
                                                    input#customCheck(type="checkbox", class="custom-control-input")
                                                    label(class="custom-control-label", for="customCheck") Remember Me
                                            a(href="index.html", class="btn btn-primary btn-user btn-block")
                                                | Login
                                            //- a(href="index.html", class="btn btn-google btn-user btn-block")
                                                i(class="fab fa-google fa-fw")
                                                | Login with Google
                                            //- a(href="index.html", class="btn btn-facebook btn-user btn-block")
                                                i(class="fab fa-facebook-f fa-fw")
                                                | Login with Facebook
                                        hr
                                        div(class="text-center")
                                            a(class="small", href="forgot-password.html") Forgot Password?
                                        div(class="text-center")
                                            a(class="small", href="register.html") Create an Account!
