extend index

block website_title
    title #{website_title} | صفحة الخدمة

block home_block
    //breadcrumb
    nav(aria-label="breadcrumb" class="main-breadcrumb" style="background-image:url('../images/bgs/broad.jpg')")
        div(class="container")
            div(class="breadcrumb-title")
                h2 صفحة الخدمة
            nav(aria-label="breadcrumb")
                ol(class="breadcrumb")
                    li(class="breadcrumb-item")
                        a(href="index.html") الرئيسية
                    li(class="breadcrumb-item active", aria-current="page") صفحة الخدمة
    //breadcrumb
    
    //single services
    section(class="single-service")
        div(class="container")
            div(class="content")
                div(class="row")
                    div(class="col-lg-8")
                        div(class="service-box")
                            div(class="image")
                                img(class="img-fluid" data-src="../images/services/01.jpg" alt="")
                            div(class="details")
                                div(class="title")
                                    h3 ترتبط المحاماة بالحياة القانونية ، كما تعيش في المحاكم وفي المجتمع ويقع على المحامي واجب خماسي الأبعاد
