extend index

block website_title
    title #{website_title} | الدفع

block home_block
    //breadcrumb
    nav(aria-label="breadcrumb" class="main-breadcrumb" style="background-image:url('images/bgs/bread.jpg')")
        div(class="container")
            div(class="breadcrumb-title")
                h2 الدفع
            nav(aria-label="breadcrumb")
                ol(class="breadcrumb")
                    li(class="breadcrumb-item")
                        a(href="index.html") الرئيسية
                    li(class="breadcrumb-item active" aria-current="page") الدفع
    //breadcrumb

    //checkout page
    section(class="checkout")
        div(class="container")
            div(class="content")
                //alerts
                //- div(class="alert alert-danger", role="alert")
                    div(class="d-flex align-items-center my-1")
                        svg(xmlns="http://www.w3.org/2000/svg", width="16", height="16", fill="#b81c23", class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2", viewBox="0 0 16 16", role="img", aria-label="Warning:")
                            path(d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z")
                        div
                            strong خطأ 
                            | حقل الاسم مطلوب
                    div(class="d-flex align-items-center my-1")
                        svg(xmlns="http://www.w3.org/2000/svg", width="16", height="16", fill="#b81c23", class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2", viewBox="0 0 16 16", role="img", aria-label="Warning:")
                            path(d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z")
                        div
                            strong خطأ 
                            | حقل الهاتف مطلوب
                    div(class="d-flex align-items-center my-1")
                        svg(xmlns="http://www.w3.org/2000/svg", width="16", height="16", fill="#b81c23", class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2", viewBox="0 0 16 16", role="img", aria-label="Warning:")
                            path(d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z")
                        div
                            strong خطأ 
                            | عند موافقه العميل المبدئيه على التصميم يتم ازالة هذا النص من التصميم
                //- div(class="alert alert-success d-flex justify-content-between", role="alert")
                    div(class="d-flex align-items-center")
                        svg(class="bi flex-shrink-0 me-2", width="24", height="24", role="img", aria-label="Success:")
                            use(xlink:href="#check-circle-fill")
                            symbol(fill="#8fae1b", id="check-circle-fill" viewBox="0 0 16 16")
                                path(d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z")
                        div
                            strong مثال 
                            | على رسالة نجاح
                //form
                div(class="checkout-form")
                    div(class="title")
                        h4 معلومات الدفع
                    form(action="" method="POST")
                        div(class="row")
                            div(class="col-lg-6")
                                div(class="form-group")
                                    label(for="") الاسم *
                                    input(type="text" class="form-control" required)
                            div(class="col-lg-6")
                                div(class="form-group")
                                    label(for="") الهاتف *
                                    input(type="number" class="form-control" required)
                            div(class="col-lg-12")
                                div(class="form-group")
                                    label(for="") الحي *
                                    select(class="select2")
                                        option(value="") الحي الأول
                                        option(value="") الحي الثاني
                                        option(value="") الحي الثالث
                                        option(value="") الحي الرابع
                            div(class="col-lg-12")
                                div(class="form-group")
                                    label(for="") اكتب اسم الحي إذا لم تجده في الخيارات السابقة *
                                    textarea(class="form-control" rows="2")
                            div(class="col-lg-12")
                                div(class="form-group")
                                    label(for="") العنوان بالتفصيل *
                                    textarea(class="form-control" rows="2")
                        div(class="title")
                            h4 معلومات المنتج
                        table(class="table")
                            thead
                                tr
                                    th اسم المنتج
                                    th السعر
                                    th الكمية
                                    th المجموع
                            tbody
                                tr
                                    td مثال على عنوان المنتج
                                    td 50 ريال
                                    td(class="amount") 50
                                    td 150 ريال
                                tr
                                    td مثال على عنوان المنتج
                                    td 50 ريال
                                    td(class="amount") 20
                                    td 150 ريال
                                tr
                                    td المجموع الكلي
                                    td(class="all-total")
                                        span 150 ريال
                        div(class="checkout-btn")
                            div(class="outer-btn")
                                button(class="btn" type="submit") اطلب الآن
    //checkout page
