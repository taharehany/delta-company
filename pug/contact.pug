extend index

block website_title
    title #{website_title} | contact

block home_block
    //breadcrumb
    nav(aria-label="breadcrumb" class="main-breadcrumb" style="background-image:url('images/bgs/bg_crumb.jpg')")
        div(class="container")
            div(class="breadcrumb-title")
                h2 contact
            nav(aria-label="breadcrumb")
                ol(class="breadcrumb")
                    li(class="breadcrumb-item")
                        a(href="index.html") Home
                    li(class="breadcrumb-item active", aria-current="page") contact
    //breadcrumb

    //contact page
    section(class="contact-in-page")
        div(class="container")
            div(class="content")
                div(class="row")
                    div(class="col-lg-4 p-0")
                        div(class="contact-info")
                            div(class="content")
                                div(class="details")
                                    h3(class="title") Contact Details
                                    div(class="info-box")
                                        div(class="icon")
                                            img(class="img-fluid" data-src="images/icons/map.png" alt="")
                                        div(class="info")
                                            h4 head office location
                                            p s . Box 104120 Riyadh 11626
                                    div(class="info-box")
                                        div(class="icon")
                                            img(class="img-fluid" data-src="images/icons/message.png" alt="")
                                        div(class="info")
                                            h4 email
                                            p
                                                a(href="mailto:info@middleeasta.com") info@middleeasta.com
                                    div(class="info-box")
                                        div(class="icon")
                                            img(class="img-fluid" data-src="images/icons/phone.png" alt="")
                                        div(class="info")
                                            h4 phone
                                            p 
                                                a(href="tel:+966553255414" dir="ltr") +96614713565
                                            h4 fax
                                            p
                                                a(dir="ltr") +96614716212
                                div(class="links")
                                    a(href="#", class="bi bi-facebook")
                                    a(href="#", class="bi bi-twitter")
                                    a(href="#", class="bi bi-instagram")
                                    a(href="#", class="bi bi-linkedin")
                    div(class="col-lg-8 p-0")
                        div(class="contact-form")
                            div(class="main-title")
                                h2 Send a Message
                                p Your email address will not be published. Required fields are marked with *
                            div(class="alert alert-danger alert-dismissible fade show", role="alert")
                                strong Holy guacamole!
                                | You should check in on some of those fields below.
                                button(type="button", class="btn-close", data-bs-dismiss="alert", aria-label="Close")
                            form(class="needs-validation" novalidate)
                                div(class="row")
                                    div(class="col-lg-6")
                                        div(class="form-group position-relative")
                                            label(for="") your name *
                                            input(type="text" class="form-control" placeholder="Name" required)
                                    div(class="col-lg-6")
                                        div(class="form-group position-relative")
                                            label(for="") your email *
                                            input(type="email" class="form-control" placeholder="Email" required)
                                    div(class="col-lg-12")
                                        div(class="form-group position-relative")
                                            label(for="") your number *
                                            input(type="number" class="form-control" placeholder="Phone" required)
                                    div(class="col-lg-12")
                                        div(class="form-group")
                                            label(for="") your message *
                                            textarea(class="form-control" rows="5" placeholder="Leave a comment here")
                                    div(class="col-lg-12")
                                        p(class="successfully") Message Sent Successfully 
                                div(class="contact-btn")
                                    div(class="outer-btn")
                                        button(class="btn" type="submit")
                                            span send now
    //contact page

    //map
    section(class="map")
        iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d55251.33564056191!2d31.22344491853406!3d30.059558098334296!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14583fa60b21beeb%3A0x79dfb296e8423bba!2sCairo%2C%20Cairo%20Governorate!5e0!3m2!1sen!2seg!4v1634654464669!5m2!1sen!2seg", width="100%", height="450", style="border:0;", allowfullscreen="", loading="lazy")
    //map