extend index 

block website_title 
    title Events | Contact
    
block home_block
    section(class="py-4 bg-light inner-header")
        div(class="container")
            div(class="row d-flex align-items-center")
                div(class="col-lg-6 col-md-6")
                    h4(class="mt-0 mb-0 text-dark")
                        | Contact Us
                div(class="col-lg-6 col-md-6 text-right")
                    div(class="breadcrumbs")
                        p(class="mb-0")
                            a(href="#")
                                i(class="icofont-ui-home")
                                | Home
                            | /
                            span Contact Us
    section(class="py-5 bg-light border-top")
        div(class="container")
            div(class="row")
                div(class="col-lg-5 col-md-6")
                    div(class="p-4 h-100 bg-white rounded overflow-hidden position-relative shadow")
                        h4(class="mt-0 mb-4 text-dark") Get In Touch
                        h6(class="text-dark")
                            i(class="fa fa-phone fa-fw pr-1")
                            | Phone :
                        p(class="pl-4")
                            a(href="tel:(+91) 123 456 7890" class="text-dark") (+91) 123 456 7890
                        h6(class="text-dark")
                            i(class="fa fa-envelope fa-fw pr-1")
                            | Email :
                        p(class="pl-4")
                            a(href="mailto:admin@events.com", class="text-dark") admin@events.com
                        h6(class="text-dark")
                            i(class="fa fa-link fa-fw pr-1")
                            | Website :
                        p(class="pl-4")
                            a(href="www.askbootstrap.com", class="text-dark") www.askbootstrap.com
                        h6(class="text-dark")
                            i(class="fa fa-map fa-fw pr-1")
                            | Address :
                        p(class="pl-4") 86 Petersham town, New South wales Waedll Steet, Australia PA 6550
                div(class="col-lg-7 col-md-6")
                    div(class="p-4 bg-white rounded overflow-hidden position-relative shadow")
                        h4(class="mt-0 mb-4 text-dark") Contact Us
                        form#contactForm(name="sentMessage", novalidate="")
                            div(class="control-group form-group")
                                div(class="controls")
                                    label Full Name 
                                        span(class="text-danger") *
                                    input#name(type="text", placeholder="Full Name", class="form-control", required="", data-validation-required-message="Please enter your name.")
                                    p(class="help-block")
                            div(class="row")
                                div(class="control-group form-group col-md-6")
                                    label Phone Number 
                                        span(class="text-danger") *
                                    div(class="controls")
                                        input#phone(type="tel", placeholder="Phone Number", class="form-control", required="", data-validation-required-message="Please enter your phone number.")
                                        div(class="help-block")
                                div(class="control-group form-group col-md-6")
                                    div(class="controls")
                                        label Email Address 
                                            span(class="text-danger") *
                                        input#email(type="email", placeholder="Email Address", class="form-control", required="", data-validation-required-message="Please enter your email address.")
                                        div(class="help-block")
                            div(class="control-group form-group mb-4")
                                div(class="controls")
                                    label Message 
                                        span(class="text-danger") *
                                    textarea#message(rows="4", cols="100", placeholder="Message", class="form-control", required="", data-validation-required-message="Please enter your message", maxlength="999", style="resize:none")
                                    div(class="help-block")
                            #success
                            button(type="submit", class="btn btn-primary btn-sm float-right") Send Message
