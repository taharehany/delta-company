    div(class="top-bar") 
        div(class="container")
            div(class="top-bar-content") 
                div(class="lang")
                    a(href="arabic/index.html") Ar
                    |  | 
                    a(href="#!") En
                div(class="btn-area")
                    //if user login
                    a( class="notification position-relative" href="notifications.html")
                        i(class="bi bi-bell")
                        span(class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger")
                            | 99+
                    div(class="account")
                        div(class="dropdown")
                            button(id="accountDropdown" class="", type="button", data-bs-toggle="dropdown", aria-expanded="false")
                                div(class="icon")
                                    img(src="images/profile.png", alt="")
                            ul(class="user-content dropdown-menu", aria-labelledby="accountDropdown")
                                div(class="user-icon")
                                    img(src="images/profile.png", alt="")
                                div(class="user-text")
                                    p Mohamed Khaled
                                    span Web Developer
                                div(class="user-buttons")
                                    a(class="btn", href="profile.html") profile
                                    a(class="btn", href="#!") logout
                    //login and register buttons
                    button(class="btn login" type="button", data-bs-toggle="modal", data-bs-target="#loginModal")
                        i(class="flaticon-button")
                        | login
                    button(class="btn register" type="button", data-bs-toggle="modal", data-bs-target="#registerModal")
                        i(class="flaticon-button")
                        | register
                    //login and register buttons
                    
                    //login modal
                    div(class="modal login-modal fade", id="loginModal" tabindex="-1", aria-labelledby="loginModalLabel", aria-hidden="true")
                        div(class="modal-dialog")
                            div(class="modal-content")
                                div(class="modal-header")
                                    h5(class="modal-title" id="loginModalLabel") login
                                    button(type="button", class="btn-close", data-bs-dismiss="modal", aria-label="Close")
                                div(class="modal-body")
                                    form(class="g-3 needs-validation" action="" novalidate)
                                        div(class="row")
                                            div(class="col-lg-12")
                                                div(class="form-group input-group flex-nowrap")
                                                    div(class="input-group has-validation")
                                                        i(class="input-group-text bi bi-envelope")
                                                        input(type="email" class="form-control" placeholder="Email" required)
                                                        div(class="invalid-tooltip")
                                                            | email error
                                            div(class="col-lg-12")
                                                div(class="form-group input-group flex-nowrap")
                                                    i(class="input-group-text bi bi-shield-lock")
                                                    input(type="password" class="form-control" placeholder="Password" required)
                                            div(class="col-lg-12 mb-2")
                                                div(class="form-check")
                                                    input(input class="form-check-input" type="checkbox" id="loginRem")
                                                    label(class="form-check-label", for="loginRem")
                                                        | Remember me
                                            div(class="col-lg-12 text-center")
                                                div(class="form-group")
                                                    button(class="btn btn-danger" type="submit") login now
                                            div(class="col-lg-12 text-center toggle-link")
                                                p Don't have an account?
                                                    button(class="btn" type="button", data-bs-toggle="modal", data-bs-target="#registerModal") Create One
                                                p Forget your password?
                                                    button(class="btn" type="button", data-bs-toggle="modal", data-bs-target="#forgetPasswordModal") send email
                    //login modal

                    //register modal
                    div(class="modal register-modal fade", id="registerModal" tabindex="-1", aria-labelledby="registerModalLabel", aria-hidden="true")
                        div(class="modal-dialog")
                            div(class="modal-content")
                                div(class="modal-header")
                                    h5(class="modal-title" id="registerModalLabel") register
                                    button(type="button", class="btn-close", data-bs-dismiss="modal", aria-label="Close")
                                div(class="modal-body inter-form")
                                    form(class="g-3 needs-validation" action="" novalidate)
                                        div(class="row")
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-person")
                                                input(type="text" class="form-control" placeholder="Name" required)
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-telephone")
                                                input(type="number" class="form-control" placeholder="Number" required)
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                div(class="input-group has-validation")
                                                    i(class="input-group-text bi bi-envelope")
                                                    input(type="email" class="form-control" placeholder="Email" required)
                                                    div(class="invalid-tooltip")
                                                        | email error
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-shield-lock")
                                                input(type="password" class="form-control" placeholder="Password" required)
                                        div(class="col-lg-12")
                                            div(class="form-group input-group flex-nowrap")
                                                i(class="input-group-text bi bi-shield-lock")
                                                input(type="password" class="form-control" placeholder="Confirm Password" required)
                                        div(class="col-lg-12 mb-2")
                                            div(class="form-check")
                                                input(input class="form-check-input" type="checkbox" id="registerRem")
                                                label(class="form-check-label", for="registerRem")
                                                    | Remember me
                                            div(class="col-lg-12 text-center")
                                                div(class="form-group")
                                                    button(class="btn btn-danger" type="submit") register now
                                            div(class="col-lg-12 text-center toggle-link")
                                                p have an account?
                                                    button(class="btn" type="button", data-bs-toggle="modal", data-bs-target="#loginModal") login now
                    //register modal

                    //forget password modal
                    div(class="modal forget-password-modal fade", id="forgetPasswordModal" tabindex="-1", aria-labelledby="forgetPasswordModalLabel", aria-hidden="true")
                        div(class="modal-dialog")
                            div(class="modal-content")
                                div(class="modal-header")
                                    h5(class="modal-title" id="forgetPasswordModalLabel") forget password
                                    button(type="button", class="btn-close", data-bs-dismiss="modal", aria-label="Close")
                                div(class="modal-body")
                                    form(class="g-3 needs-validation" action="" novalidate)
                                        div(class="row")
                                            div(class="col-lg-12")
                                                div(class="form-group input-group flex-nowrap")
                                                    div(class="input-group has-validation")
                                                        i(class="input-group-text bi bi-envelope")
                                                        input(type="email" class="form-control" placeholder="Email" required)
                                                        div(class="invalid-tooltip")
                                                            | email error
                                            div(class="col-lg-12 text-center")
                                                div(class="form-group")
                                                    button(class="btn btn-danger" type="submit") send now
                                            div(class="col-lg-12 text-center toggle-link")
                                                p Don't have an account?
                                                    button(class="btn" type="button", data-bs-toggle="modal", data-bs-target="#registerModal") Create One
