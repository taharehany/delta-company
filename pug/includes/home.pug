//contact us
section(class="contact")
    div(class="container")
        div(class="content")
            div(class="contact-form wow slideInUp" data-wow-duration="1.3s" data-wow-delay=".2s")
                div(class="main-title wow slideInUp" data-wow-duration="1.3s" data-wow-delay="0s")
                    h2 contact us now
                form(class="needs-validation" novalidate)
                    div(class="row")
                        div(class="col-lg-6")
                            div(class="form-group position-relative")
                                label(for="") your name *
                                input(type="text" class="form-control" name="" placeholder="Name" required)
                        div(class="col-lg-6")
                            div(class="form-group position-relative")
                                label(for="") your email *
                                input(type="email" class="form-control" name="" placeholder="Email" required)
                        div(class="col-lg-6")
                            div(class="form-group position-relative")
                                label(for="") your number *
                                input(type="number" class="form-control" name="" placeholder="Phone" required)
                        div(class="col-lg-6")
                            div(class="form-group position-relative")
                                label(for="") work position *
                                input(type="text" class="form-control" name="" placeholder="work position" required)
                        div(class="col-lg-6")
                            div(class="form-group position-relative")
                                label(for="") fax *
                                input(type="number" class="form-control" name="" placeholder="fax" required)
                        div(class="col-lg-6")
                            div(class="form-group")
                                label(for="") Inquiry type *
                                select(class="form-select") 
                                    option(disabled, selected) Select an option
                                    option(value="1") Service Request
                                    option(value="2") to thank
                                    option(value="3") complaint
                                    option(value="4") Inquiry
                        div(class="col-lg-12")
                            div(class="form-group")
                                label(for="") your subject *
                                textarea(class="form-control" rows="5" name="" placeholder="your subject here")
                    div(class="contact-btn")
                        button(class="btn" type="submit") send now
