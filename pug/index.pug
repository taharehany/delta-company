include includes/variables.pug
doctype 
html(lang="ar" dir="rtl")
    head
        meta(charset="UTF-8")
        meta(name="description" content="")
        meta(property="og:title" content="ألما")
        meta(property="og:type" content="The type")
        meta(property="og:url" content="http://url.com/")
        meta(property="og:image" content="http://image.jpg")
        meta(http-equiv="Content-Type" content="text/html; charset=utf-8")
        meta(name="keywords" content="")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="shortcut icon" href="images/favicon.png")
        <!--[if lt IE 9]>
        <script src="//cdnjs.cloudflare.com/ajax/libs/html5shiv/r29/html5.min.js"></script>
        <![endif]-->
        block website_title
            title #{website_title} | الرئيسية
        include includes/styles.pug
    body
        div(class="main-wrapper")
            //PreLoader
            //- div(class="loader")
                video(width="auto" height="auto" muted autoplay loop)
                    source(src="video/loading.webm" type="video/mp4")
                    source(src="videos/video.ogg" type="video/ogg")
                    | Your browser does not support the video tag.
            //PreLoader
            
            include includes/header.pug

            //toast notification adding
            div(class="position-fixed bottom-0 end-0 p-3", style="z-index: 11")
                div(class="toast", id="addToast" role="alert", aria-live="assertive", aria-atomic="true")
                    div(class="toast-header")
                        span(class="me-auto") تم الإضافة إلى السلة بنجاح
                        button(type="button", class="btn-close btn-close-white", data-bs-dismiss="toast", aria-label="Close")
            //toast notification adding
            
            //toast notification removing
            div(class="position-fixed bottom-0 end-0 p-3", style="z-index: 11")
                div(class="toast", id="removeToast" role="alert", aria-live="assertive", aria-atomic="true")
                    div(class="toast-header")
                        span(class="me-auto") تم الحذف من السلة
                        button(type="button", class="btn-close btn-close-white", data-bs-dismiss="toast", aria-label="Close")
            //toast notification removing
            
            block home_block 
                include includes/home.pug
            include includes/footer.pug
        include includes/scripts.pug